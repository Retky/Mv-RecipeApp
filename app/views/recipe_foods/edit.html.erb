<div class="form_container">
<h1>Edit Ingredient</h1>
<%= form_for @recipe_food, url: user_recipe_recipe_food_path, method: :put , class: "form" do |form| %>
    <div class="form-row">
  <label>Quantity:</label><br>
  <%= form.number_field :quantity, class: "text_field" %>
    </div>
  <div class="submit_button_container">
    <%= form.submit "Add", class: "button submit" %>
  </div>
<% end %>
</div>