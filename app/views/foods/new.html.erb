<div class="form_container">
<h1>Add Food</h1>
<%= form_with model: @food, class: "form" do |form| %>
  <div class="form-row">
  <h3>Name:</h3>
  <%= form.text_field :name, placeholder: "Add Name", required: true, class: "text_field" %>
  </div>
  <div class="form-row">
  <h3 class="select_box">Measurement unit:</h3>
  <%= form.select :measurement_unit, ['kg', 'lb', 'oz', 'l', 'g', 'pz'], required: true, class: "select_box" %>
  </div>
  <div class="form-row">
  <h3>Price:</h3>
  <%= form.number_field :price, in: 0.00..20.00, step: 0.01, required: true, class: "text_field" %>
  </div>
    <div class="form-row">
  <h3>Quantity:</h3>
  <%= form.number_field :quantity, in: 0.00..1000.00, step: 1, required: true, class: "text_field" %>
    </div>
  <div class="submit_button_container">
    <%= form.submit "Add", class: "button submit" %>
  </div>
<% end %>
</div>